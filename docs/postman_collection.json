{
  "info": {
    "name": "Spending Log API",
    "description": "Colección de Postman para la API REST de Spending Log",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "spending-log"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Expenses",
      "item": [
        {
          "name": "List Expenses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/expenses?per_page=10&page=1",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses"],
              "query": [
                {
                  "key": "per_page",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Obtiene una lista paginada de todos los gastos"
          },
          "response": []
        },
        {
          "name": "Get Expense",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/expenses/1",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "1"]
            },
            "description": "Obtiene los detalles de un gasto específico"
          },
          "response": []
        },
        {
          "name": "Update Document Number",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document_number",
                  "value": "FACTURA-2025-001",
                  "type": "text",
                  "description": "Número de documento"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/expenses/1/document",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "1", "document"]
            },
            "description": "Actualiza el número de documento de un gasto"
          },
          "response": []
        },
        {
          "name": "Update Document Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document",
                  "type": "file",
                  "src": [],
                  "description": "Archivo de imagen o PDF"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/expenses/1/document",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "1", "document"]
            },
            "description": "Actualiza la imagen del documento de un gasto"
          },
          "response": []
        },
        {
          "name": "Update Both (Number + Image)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document_number",
                  "value": "FACTURA-2025-001",
                  "type": "text"
                },
                {
                  "key": "document",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/expenses/1/document",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "1", "document"]
            },
            "description": "Actualiza número de documento e imagen al mismo tiempo"
          },
          "response": []
        },
        {
          "name": "Delete Document Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "delete_document",
                  "value": "true",
                  "type": "text",
                  "description": "Eliminar documento actual"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/expenses/1/document",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "1", "document"]
            },
            "description": "Elimina la imagen del documento de un gasto"
          },
          "response": []
        }
      ],
      "description": "Endpoints relacionados con gastos"
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Expenses Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/expenses/statistics",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "statistics"]
            },
            "description": "Obtiene estadísticas generales de gastos"
          },
          "response": []
        }
      ],
      "description": "Endpoints de estadísticas"
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "api_token",
      "value": "",
      "type": "string"
    }
  ]
}

